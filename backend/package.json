{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/Server.js",
  "type": "module",
  "scripts": {
    "dev-server": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/Server.js\"",
    "start": "nodemon --exec node --loader ts-node/esm src/Server.ts",
    "build": "npm run clean && npx tsc",
    "build:docker": "docker build -t invent-backend-img .",
    "start:docker": "docker run --name invent-backend -v ./src:/server/src invent-backend-img",
    "start:docker-windows": "docker run -p 8080:8080 -it --name invent-backend -v %cd%/src:/server/src invent-backend-img",
    "clean-windows": "rmdir /s /q \"./dist\"",
    "clean": "rm -rf ./dist"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.4.5"
  }
}
