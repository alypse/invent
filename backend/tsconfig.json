{
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "./src/",
    "target": "es2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "lib": ["es2022"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules", "dist"
  ]
}