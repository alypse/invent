{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "build",
    "target": "es2016",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2016"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "strict": true,
  },
  "include": [
    "*.ts"
  ]
}